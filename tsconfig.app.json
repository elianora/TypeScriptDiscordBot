{
  "extends": "@tsconfig/node14/tsconfig.json",
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".build/**/*",
    ".serverless/**/*",
    ".vscode/**/*",
    "src/**/*.spec.ts"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./.build",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2019",
    "types": ["node"]
  }
}
