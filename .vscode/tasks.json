{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "npm",
      "script": "build",
      "problemMatcher": ["$eslint-stylish", "$tsc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Lint",
      "type": "npm",
      "script": "lint",
      "problemMatcher": ["$eslint-stylish"],
      "group": "none"
    },
    {
      "label": "Lint & Fix Issues",
      "type": "npm",
      "script": "lint -- --fix",
      "problemMatcher": ["$eslint-stylish"],
      "group": "none"
    },
    {
      "label": "Run Unit Tests",
      "type": "npm",
      "script": "test",
      "problemMatcher": ["$eslint-stylish", "$tsc"],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
